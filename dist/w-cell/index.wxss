.wuss-cell {
  position: relative;
}

.wuss-cell-hover {
  background: #ececec;
}

.wuss-cell::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  left: 15px;
}

.wuss-cell:first-child::before {
  /* display: none; */
}

.wuss-cell-first-cell::before {
  display: none;
}

.wuss-cell-content {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 7px 15px;
}

.wuss-cell-left {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  padding-right: 10px;
}

.wuss-cell-left w-icon {
  padding-right: 5px;
}

.wuss-cell-title {
  font-size: 18px;
}

.wuss-cell-right {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  align-items: center;
  padding-right: 20px;
}

.wuss-cell-desc {
  color: #999999;
  font-size: 16px;
  white-space: wrap;
  word-break: break-all;
}

.wuss-cell-link {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translate(0, -50%);
}